{
  "name": "cross-model",
  "scopeName": "source.cross-model",
  "fileTypes": [
    ".cm"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.cross-model",
      "match": "\\b(0\\.\\.N|1\\.\\.N|TRUE|appliesTo|apply|attribute|attributes|baseNode|businessDefinition|businessOwner|businessRules|child|childCardinality|childRole|columns|conceptual|conceptualBusinessRule|conceptualEntity|conceptualRelationship|conceptualRule|conditions|cross-join|customProperties|datamodel|datatype|defaultValue|definition|dependencies|description|diagram|documentCollection|documentType|domain|edges|entity|expression|fields|foreignKey|foreignKeys|from|height|id|identifier|identifiers|inherits|inner-join|isArray|join|left-join|length|logical|logicalBusinessRule|mapping|mappings|name|nodes|nullable|parent|parentCardinality|parentRole|path|precision|primary|primaryKey|priority|relatedConceptualAttributes|relatedConceptualEntities|relatedLogicalAttributes|relatedLogicalDataElementContainers|relatedLogicalEntities|relational|relationship|required|scale|sourceNode|sources|status|superNode|systemDiagram|table|target|targetNode|true|type|value|version|view|width|x|y)\\b"
    },
    {
      "name": "string.quoted.double.cross-model",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.cross-model",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "#",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.cross-model"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.cross-model"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.cross-model",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
