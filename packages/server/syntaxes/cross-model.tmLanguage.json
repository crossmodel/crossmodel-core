{
  "name": "cross-model",
  "scopeName": "source.cross-model",
  "fileTypes": [
    ".cm"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.cross-model",
      "match": "\\b(0\\.\\.N|1\\.\\.N|FALSE|TRUE|abstract|apply|attribute|attributes|baseNode|child|childCardinality|childRole|conditions|cross-join|customProperties|datamodel|datatype|defaultValue|dependencies|description|diagram|edges|entity|expression|expressions|extends|false|from|height|id|identifiers|inherits|inner-join|join|language|left-join|length|mandatory|mapping|mappings|name|nodes|objectDefinition|parent|parentCardinality|parentRole|precision|primary|relationship|scale|sourceNode|sources|superNode|systemDiagram|target|targetNode|true|type|value|values|version|width|x|y)\\b"
    },
    {
      "name": "string.quoted.double.cross-model",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.cross-model",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "#",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.cross-model"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.cross-model"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.cross-model",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
