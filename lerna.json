{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.8.0",
  "npmClient": "yarn",
  "command": {
    "run": {
      "stream": true
    },
    "version": {
      "conventionalCommits": true,
      "forcePublish": true,
      "noChangelog": true,
      "push": true,
      "exact": true
    },
    "publish": {
      "ignoreChanges": [
        "**/*.md"
      ]
    }
  }
}